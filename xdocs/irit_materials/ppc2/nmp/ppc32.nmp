		TMP_SDWORD = ra;
		TMP_SDWORD = TMP_SDWORD * rb;
		GPR [ rd ] = TMP_SDWORD < 63..32 >;

		CR7_update(TMP_SDWORD < 63..32 >);
		}
   otawa_used_regs = "USED_REGS"(gpr_read(ra.value), gpr_read(rb.value), gpr_write(rd), cr_write(7), END_REG)

