   action = {

		TMP_WORD_A1 = 0;
		TMP_WORD_A0 = imm;
		//TMP_WORD = imm & 0b00000000000000001111111111111111;
		GPR [ ra ] = rs | TMP_WORD;

		}
   otawa_used_regs = "USED_REGS"(gpr_write(ra), gpr_read(rs.value), END_REG)

