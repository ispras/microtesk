// for the main banks

macro gpr_read(n) = \
	((READ_REG << 24) | (BANK_GPR << 16) | ((n) & 0xFFFF)) \
macro gpr_write(n) = \
	((WRITE_REG << 24) | (BANK_GPR << 16) | ((n) & 0xFFFF)) \
macro gpr_read_range(l, u) = \
	((READ_RANGE << 24) | (BANK_GPR << 16) | (((l) & 0xFF) << 8) | ((u) & 0xFF)) \
macro gpr_write_range(l, u) = \
	((WRITE_RANGE << 24) | (BANK_GPR << 16) | (((l) & 0xFF) << 8) | ((u) & 0xFF)) \

