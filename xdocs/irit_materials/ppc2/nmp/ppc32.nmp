// Integer Subtract Instructions
op int_subtract (x: int_subtract_action)
   syntax = x.syntax
   image  = x.image
   action = { x.action; }
   otawa_kind = ARITH

op int_subtract_action =   sub_from
                  | sub_imm_carry_rec
                  | sub_carry
                  | sub_extended
                  | sub_mone_extended
                  | sub_zero_extended

op sub_from =   sub
              | sub_cr_update
              | sub_overflow_enable
              | sub_crup_overen

// Subtract Instructions

op sub ( rd : index, ra : REG_IND, rb : REG_IND )
   syntax = format ( "subf r%d,%s,%s", rd, ra.syntax, rb.syntax )
   image  = format ( "011111%5b%s%s00001010000", rd, ra.image, rb.image )
   action = {

               GPR [ rd ] = ~ra + rb + 1;

            }
   otawa_used_regs = "USED_REGS"(gpr_read(ra.value), gpr_read(rb.value), gpr_write(rd), END_REG)

op sub_cr_update ( rd : index, ra : REG_IND, rb : REG_IND )
   syntax = format ( "subf. r%d,%s,%s", rd, ra.syntax, rb.syntax )
   image  = format ( "011111%5b%s%s00001010001", rd, ra.image, rb.image )
   action = {

		TMP_RES = ~ra + rb + 1;
	  	GPR [ rd ] = TMP_RES;
		CR7_update(TMP_RES);
		}
   otawa_used_regs = "USED_REGS"(gpr_read(ra.value), gpr_read(rb.value), gpr_write(rd), cr_write(7), END_REG)

op sub_overflow_enable ( rd : index, ra : REG_IND, rb : REG_IND )
   syntax = format ( "subfo r%d,%s,%s", rd, ra.syntax, rb.syntax )
   image  = format ( "011111%5b%s%s10001010000", rd, ra.image, rb.image )
   action = {

      	TMP_RES = ~ra + rb + 1;

		sub_overflow_check(ra, rb, TMP_RES);
  		GPR[rd] = TMP_RES;
		}
   otawa_used_regs = "USED_REGS"(gpr_read(ra.value), gpr_read(rb.value), gpr_write(rd), xer_write, END_REG)

op sub_crup_overen ( rd : index, ra : REG_IND, rb : REG_IND )
   syntax = format ( "subfo. r%d,%s,%s", rd, ra.syntax, rb.syntax )
   image  = format ( "011111%5b%s%s10001010001", rd, ra.image, rb.image )
   action = {

      	TMP_RES = ~ra + rb + 1;
		sub_overflow_check(ra, rb, TMP_RES);
		GPR[rd]=TMP_RES;
		CR7_update(TMP_RES);
		}
   otawa_used_regs = "USED_REGS"(gpr_read(ra.value), gpr_read(rb.value), gpr_write(rd), xer_write, cr_write(7), END_REG)

