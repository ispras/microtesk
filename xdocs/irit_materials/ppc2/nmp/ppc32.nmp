// 2.2.1 System Call

op sys_call ( )
   syntax = "sc"
   image  = "01000100000000000000000000000010"
   action = { "sc_impl"("instr","state",M);}
   otawa_kind = SYSTEM
   is_branch = 1
   otawa_used_regs = "USED_REGS"(END_REG)

