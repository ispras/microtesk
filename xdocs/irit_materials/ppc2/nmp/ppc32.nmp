		mul_overflow_check(ra, rb, TMP_RES );
		GPR[rd] = TMP_RES;

		CR7_update(TMP_RES);
        }
   otawa_used_regs = "USED_REGS"(gpr_read(ra.value), gpr_read(rb.value), gpr_write(rd), xer_write, cr_write(7), END_REG)


