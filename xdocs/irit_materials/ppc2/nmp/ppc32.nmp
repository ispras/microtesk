op nand_cr_update ( rs : REG_IND, ra : index, rb : REG_IND )
   syntax = format ( "nand. r%d,%s,%s", ra, rs.syntax, rb.syntax )
   image  = format ( "011111%s%5b%s01110111001", rs.image, ra, rb.image )
