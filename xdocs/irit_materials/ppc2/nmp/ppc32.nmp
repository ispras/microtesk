   action = {
		TMP_DWORD = coerce ( card ( 32 ) , ra );
		TMP_DWORD = TMP_DWORD * coerce ( card ( 32 ) , rb );
		GPR [ rd ] = TMP_DWORD < 63..32 >;

        }
