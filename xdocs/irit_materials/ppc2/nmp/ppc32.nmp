op slw ( rs : REG_IND, ra : index, rb : REG_IND )
   syntax = format ( "slw r%d,%s,%s", ra, rs.syntax, rb.syntax )
   image  = format ( "011111%s%5b%s00000110000", rs.image, ra, rb.image )
   action = {

