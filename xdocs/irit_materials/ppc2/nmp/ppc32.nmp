               endif;
               TMP_EA = GPR [ ra ] + d;
               TMP_BYTE = M [ TMP_EA ];
               GPR [ rd ] = TMP_BYTE;
               GPR [ rd ] = ( 0x000000ff & GPR [ rd ] );
               GPR [ ra ] = TMP_EA;
